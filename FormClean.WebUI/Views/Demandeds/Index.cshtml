@model IEnumerable<FormClean.Application.DTOs.DemandedDTO>

@{
    ViewData["Title"] = "Pedidos";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="VerifyClientExists" class="btn btn-primary">
                    <span title="Cadastrar Pedido" class="fas fa-plus"></span> Cadastrar Pedido
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table id="table" class="table table-striped cell-border">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Client)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DemandedStatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DemandedStatus)
                    </td>
                    <td>
                        <div class="row">
                            <div class="m-2">
                                <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-primary">
                                    <span class="fas fa-search">Detalhes</span>
                                </a>
                            </div>
                            <div class="m-2">
                                <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-danger">
                                    <span class="fas fa-trash-alt">Deletar</span>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>