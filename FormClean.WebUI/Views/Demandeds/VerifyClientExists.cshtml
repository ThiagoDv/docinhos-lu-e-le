@model IEnumerable<FormClean.Application.DTOs.ClientDTO>

@{
    ViewData["Title"] = "Situação Do Cliente";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="">
            <h3 id="titulo-verificacao">@ViewData["Title"]</h3>
        </div>
        <hr />
    </div>
    <div class="row justify-content-center">
        <div id="btn-verifica-clientes" class="col-md-4">
            <div class="form-group">
                <div>
                    <a asp-controller="Demandeds" asp-action="Create" class="btn btn-success">Cliente Já Cadastrado</a>
                </div>
            </div>
        </div>
        <div id="btn-cadastrar-clientes" class="col-md-4">
            <div class="form-group">
                <div>
                    <a asp-controller="Clients" asp-action="Create" class="btn btn-warning">Cadastrar Cliente</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div id="form-create-demanded" class="container-sm">
        <div class="row align-items-center gx-5">
            <div class="col-12">
                <table id="table" class="table table-bordered cell-border display nowrap" cellspacing="0" width="100%">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="bi bi-search">
                                            </a>
                                        </div>
                                        <div class="col-md-6">
                                            <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="bi bi-x-square">
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



