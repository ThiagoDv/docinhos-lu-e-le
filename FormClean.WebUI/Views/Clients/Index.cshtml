@model IEnumerable<FormClean.Application.DTOs.ClientDTO>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container col-12">
    <div class="row">
        <div class="col-md-6 order-2">
            <img id="icon-clients" src="~/img/iconClients.svg" alt="icon-clients" />
        </div>
        <div class="col-md-6 order-1">
            <h2 id="titulo-create-demanded">@ViewData["Title"]</h2>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Cadastrar Cliente" class="fas fa-plus"></span> Cadastrar Cliente
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <div id="form-create-demanded" class="container-sm">
        <div class="row align-items-center gx-5">
            <div class="col-12">
                <table id="table" class="table table-bordered cell-border display nowrap" cellspacing="0" width="100%">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="bi bi-search">
                                            </a>
                                        </div>
                                        <div class="col-md-6">
                                            <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="bi bi-x-square">
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>