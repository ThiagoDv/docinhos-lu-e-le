@model FormClean.Application.DTOs.ClientDTO;

@{
    ViewData["Title"] = "Registre um novo Cliente";
}

<h2>@ViewData["Title"]</h2>


<form asp-action="Create" method=post>
    <div class="form-horizontal">
        <hr />
        <div class="form-group col-md-6">
            <label asp-for="Name" class="col-md-6 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
            </div>
            <div asp-validation-for="Name" class="text-danger"></div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email" class="col-md-6 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
            </div>
            <div asp-validation-for="Email" class="text-danger"></div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Phone" class="col-md-6 control-label"></label>
            <div class="col-md-10">
                <input id="maskPhone" asp-for="Phone" class="form-control" />
            </div>
            <div asp-validation-for="Phone" class="text-danger"></div>
        </div>
        <hr />
        <h4>Endereço Cliente</h4>
        <div class="form-group col-md-6">
            <label asp-for="Street" class="col-md-6 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Street" class="form-control" />
            </div>
            <div asp-validation-for="Street" class="text-danger"></div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="District" class="col-md-6 control-label"></label>
            <div class="col-md-10">
                <input asp-for="District" class="form-control" />
            </div>
            <div asp-validation-for="District" class="text-danger"></div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="NumberStreet" class="col-md-6 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NumberStreet" class="form-control" />
            </div>
            <div asp-validation-for="NumberStreet" class="text-danger"></div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar Cliente" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
<script>
    $('#maskPrice').mask('R$ 000.000.000.000.000,00', {reverse: true});

    $('#maskPhone').mask('(00) 0 0000-0000');
</script>
}